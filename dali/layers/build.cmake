FILE(GLOB_RECURSE LAYERS ${ROOT_DIR}/dali/layers/**/*.cmake )
SET(LAYERS_ROOT ${ROOT_DIR}/dali/layers )
FOREACH( LAYER_INFO ${LAYERS} )
  INCLUDE(${LAYER_INFO})
  ADD_LIBRARY( ${LAYER_NAME} SHARED ${LAYER_SOURCES} )
  TARGET_LINK_LIBRARIES( ${LAYER_NAME} dali-layers dl )
  INSTALL( TARGETS ${LAYER_NAME} LIBRARY DESTINATION ${INSTALL_PATH}/lib )
  INSTALL( TARGETS ${LAYER_NAME} LIBRARY DESTINATION /tmp )
  INSTALL( FILES ${LAYER_INSTALL_FILES} DESTINATION ${INSTALL_PATH}/share/dali/layers )
  MESSAGE("Adding layer: ${LAYER_NAME}")
ENDFOREACH()